# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/resumerag
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=resumerag

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
ENCRYPTION_KEY=your-encryption-key-32-bytes-base64-encoded

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# OpenAI Configuration (Required for embeddings)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Vector Database
PGVECTOR_DIM=1536

# Worker Configuration
USE_WORKER=false
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# File Upload
MAX_FILE_SIZE_MB=10
ALLOWED_EXTENSIONS=pdf,docx,txt,zip

# MinIO/S3 Configuration (Optional)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=resumes
MINIO_SECURE=false

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Observability (Optional)
ENABLE_METRICS=true
ENABLE_TRACING=false
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# PII Detection
ENABLE_PII_DETECTION=true
PII_DETECTION_MODEL=en_core_web_sm

# Session Configuration
SESSION_SECRET_KEY=your-session-secret-key-change-in-production

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Environment
ENVIRONMENT=development
DEBUG=true
